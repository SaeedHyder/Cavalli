<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/x15"
        android:layout_marginStart="@dimen/x15"
        android:layout_marginBottom="@dimen/x2"
        android:layout_marginTop="@dimen/x8"
        app:cardCornerRadius="@dimen/x8"
        app:cardElevation="@dimen/x3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x150"
                android:scaleType="fitXY"
                android:src="@drawable/placeholder_banner" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:layout_alignBottom="@+id/imageView"

                android:background="@color/black" />

            <com.application.cavalliclub.ui.views.AnyTextView
                android:id="@+id/txt_menuItem"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:layout_alignBottom="@+id/imageView"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/x15"
                android:text="Lounge Menu"
                android:textColor="@color/white"
                android:textSize="@dimen/x15"
                app:typeface="@string/font_normal" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>