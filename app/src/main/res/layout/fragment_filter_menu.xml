<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x200"
            android:background="@color/sidemenu_black"
          >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_updated"
                android:layout_centerInParent="true"
               />

            <ImageView
                android:id="@+id/iv_cross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="@dimen/x8"
                android:src="@drawable/cross" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50"
            android:background="@color/app_light_gray">

            <com.application.cavalliclub.ui.views.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/x10"
                android:gravity="center_vertical"
                android:text="@string/sort_by"
                android:textColor="@color/black"
                android:textSize="@dimen/x15"
                app:typeface="@string/font_normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/x10"
                    android:src="@drawable/downarrow2" />

            </LinearLayout>

        </LinearLayout>

<!--        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">-->

            <CheckBox
                android:id="@+id/btn_reserved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x15"
                android:layout_marginTop="@dimen/x15"
                android:button="@drawable/selector_radiobtn"
                android:checked="false"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/x10"
                android:text="Reserved"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/x16" />

            <CheckBox
                android:id="@+id/btn_pending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x15"
                android:layout_marginTop="@dimen/x15"
                android:button="@drawable/selector_radiobtn"
                android:checked="false"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/x10"
                android:text="Pending"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/x16" />

            <CheckBox
                android:id="@+id/btn_rejected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x15"
                android:layout_marginTop="@dimen/x15"
                android:button="@drawable/selector_radiobtn"
                android:checked="false"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/x10"
                android:text="Rejected"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/x16" />

            <CheckBox
                android:id="@+id/btn_cancelled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x15"
                android:layout_marginTop="@dimen/x15"
                android:button="@drawable/selector_radiobtn"
                android:checked="false"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/x10"
                android:text="Cancelled"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/x16" />

        <!--</RadioGroup>-->


        <Button
            android:id="@+id/btn_clear"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginTop="@dimen/x30"
            android:background="@drawable/rounded_button"
            android:text="@string/clear"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/x18" />

        <Button
            android:id="@+id/btn_done"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginTop="@dimen/x15"
            android:background="@drawable/rounded_button_black"
            android:text="@string/done"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/x18" />

    </LinearLayout>

</ScrollView>