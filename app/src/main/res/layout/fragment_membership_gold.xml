<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ingic.cavalliclub.ui.views.AnyTextView
        android:id="@+id/txt_no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/no_data_available"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/x15"
        android:visibility="gone"
        app:typeface="Roboto-Regular.ttf" />

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginTop="@dimen/x15"
            android:layout_weight="0.9"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"

                />

            <ImageView
                android:id="@+id/CardLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/x55" />


            <com.ingic.cavalliclub.ui.views.AnyTextView
                android:id="@+id/memberShip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/x120"
                android:layout_marginTop="@dimen/x20"
                android:textAllCaps="true"
                android:textColor="@color/text_gray_logo"
                android:textSize="@dimen/x18"
                android:visibility="gone"
                app:typeface="@string/font_bold"
                tools:text="Platinum Membership" />

            <com.ingic.cavalliclub.ui.views.AnyTextView
                android:id="@+id/memberShipPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/x30"
                android:layout_marginTop="@dimen/x20"
                android:textAllCaps="true"
                android:textColor="@color/text_gold_logo"
                android:textSize="@dimen/x18"
                app:typeface="@string/font_bold"
                tools:text="Platinum Membership" />

            <com.ingic.cavalliclub.ui.views.AnyTextView
                android:id="@+id/memberShipDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/x60"
                android:layout_marginEnd="@dimen/x40"
                android:layout_marginStart="@dimen/x40"
                android:layout_marginTop="@dimen/x5"
                android:alpha="0.7"
                android:gravity="center"
                android:maxLines="1"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/x10"
                android:visibility="gone"
                app:typeface="@string/font_normal"
                tools:text="@string/lorem_ipsum_long" />


        </RelativeLayout>


        <Button
            android:id="@+id/btn_buyNow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50"
            android:layout_below="@+id/iv_card"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/x30"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginTop="@dimen/x10"
            android:background="@drawable/loginbtn"
            android:text="@string/buy_now"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/x18" />

    </LinearLayout>


</LinearLayout>