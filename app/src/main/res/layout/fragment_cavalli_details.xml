<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="onClick"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_drinks_detail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x180"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/placeholder_banner"/>


        <com.ingic.cavalliclub.ui.views.AnyTextView
            android:id="@+id/txt_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginTop="@dimen/x10"
            android:alpha="0.8"
            android:textColor="@color/black"
            android:textSize="@dimen/x18"
            app:typeface="@string/app_font_light"
            tools:text="Cavalli Night Event" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginTop="@dimen/x10"
            android:alpha="0.3"
            android:background="@color/viewLine" />

        <com.ingic.cavalliclub.ui.views.AnyTextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginBottom="@dimen/x10"
            android:alpha="0.7"
            tools:text="@string/lorem_ipsum_very_small"
            android:textColor="@color/black"
            android:textSize="@dimen/x12"
            app:typeface="@string/app_font_light" />

        <com.ingic.cavalliclub.ui.views.AnyTextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginTop="@dimen/x5"
            android:alpha="0.7"
            android:text="Location:"
            android:textColor="@color/black"
            android:textSize="@dimen/x12"
            app:typeface="@string/app_font_light" />

        <com.ingic.cavalliclub.ui.views.AnyTextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginTop="@dimen/x5"
            android:alpha="0.7"
            android:text="Date:"
            android:textColor="@color/black"
            android:textSize="@dimen/x12"
            app:typeface="@string/app_font_light" />

        <com.ingic.cavalliclub.ui.views.AnyTextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginTop="@dimen/x5"
            android:alpha="0.7"
            android:text="Time:"
            android:textColor="@color/black"
            android:textSize="@dimen/x12"
            app:typeface="@string/app_font_light" />


        <Button
            android:id="@+id/btn_mark_unmark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginTop="@dimen/x40"
            android:background="@drawable/loginbtn"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/x18" />

        <Button
            android:id="@+id/btn_add_inquiry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginTop="@dimen/x10"
            android:background="@drawable/transparent_button"
            android:text="@string/add_inquiry"
            android:textAllCaps="false"
            android:textColor="@color/app_golden"
            android:textSize="@dimen/x18" />

        <Button
            android:id="@+id/btn_reserve_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginTop="@dimen/x10"
            android:background="@drawable/loginbtn"
            android:textAllCaps="false"
            android:text="@string/reserve_event"
            android:textColor="@color/white"
            android:textSize="@dimen/x18" />

    </LinearLayout>

</ScrollView>