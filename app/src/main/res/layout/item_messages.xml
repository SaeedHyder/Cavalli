<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x10"
        android:gravity="top"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivNotification"
            android:layout_width="@dimen/x110"
            android:layout_height="@dimen/x110"
            android:padding="@dimen/x12"
            android:src="@drawable/logo_updated"
            android:background="@drawable/rounder_image"
            android:visibility="gone"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/x8"
            android:layout_marginTop="@dimen/x5"
            android:orientation="vertical">

            <com.ingic.cavalliclub.ui.views.AnyTextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="@color/app_gray"
                android:textSize="@dimen/x15"
                tools:text="title"
                app:typeface="@string/font_bold"
                android:layout_weight="0.3"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:minLines="1"/>

            <com.ingic.cavalliclub.ui.views.AnyTextView
                android:id="@+id/tv_msg"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="@color/app_gray"
                android:textSize="@dimen/x12"
                tools:text="@string/lorem_ipsum_small"
                app:typeface="@string/font_normal"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_weight="0.6"
                android:maxLines="2"
                android:minLines="2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/x5"
                android:orientation="horizontal"
                android:layout_weight="0.2">

                <com.ingic.cavalliclub.ui.views.AnyTextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/app_gray"
                    android:drawablePadding="@dimen/x5"
                    android:drawableStart="@drawable/date1"
                    android:textSize="@dimen/x12"
                    tools:text="29-04-17"
                    app:typeface="@string/font_normal"
                    android:layout_marginRight="@dimen/x5"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"/>

                <View
                    android:layout_width="@dimen/x1"
                    android:layout_height="match_parent"
                    android:background="@color/view_gray"/>


                <com.ingic.cavalliclub.ui.views.AnyTextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/app_gray"
                    android:drawablePadding="@dimen/x5"
                    android:drawableStart="@drawable/time1"
                    tools:text="03:00"
                    android:textSize="@dimen/x12"
                    app:typeface="@string/font_normal"
                    android:layout_marginLeft="@dimen/x5"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginStart="@dimen/x10"
        android:layout_marginEnd="@dimen/x10"
        android:background="@color/view_gray_dark" />

</LinearLayout>