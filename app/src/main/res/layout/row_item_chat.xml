<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/leftLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
        android:paddingEnd="@dimen/x10"
        android:paddingStart="@dimen/x10"
        android:visibility="visible">

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewLeft"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/x5"
            android:elevation="@dimen/x10"
            app:cardCornerRadius="@dimen/x8">

            <ImageView
                android:id="@+id/imageViewLeft"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:padding="@dimen/x3"

                android:src="@drawable/logo_updated" />

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/leftLayoutChild"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/cardViewLeft"
            android:background="@drawable/ch_white"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="visible">

            <com.ingic.cavalliclub.ui.views.AnyTextView
                android:id="@+id/txtSenderChatLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/x12"
                app:typeface="Roboto-Regular.ttf"
               />

        </LinearLayout>
    </RelativeLayout>

    <com.ingic.cavalliclub.ui.views.AnyTextView
        android:id="@+id/tv_date_time_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:gravity="end"
        android:paddingEnd="@dimen/x10"
        android:paddingStart="@dimen/x10"
        android:textColor="@color/app_gray"
        android:textSize="@dimen/x8"
        app:typeface="@string/font_normal"
        tools:text="29-04-17" />

    <RelativeLayout
        android:id="@+id/RightLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
        android:paddingEnd="@dimen/x10"
        android:paddingStart="@dimen/x10"
        android:visibility="visible">

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewRight"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/x5"
            android:elevation="@dimen/x10"
            app:cardCornerRadius="@dimen/x8">

            <ImageView
                android:id="@+id/imageViewRight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder_thumb" />

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/rightLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/cardViewRight"
            android:background="@drawable/ch"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="visible">

            <com.ingic.cavalliclub.ui.views.AnyTextView
                android:id="@+id/txtReceiverChatRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/x7"
                android:paddingTop="@dimen/x7"
                android:textColor="@color/white"
                android:textSize="@dimen/x12"
                app:typeface="Roboto-Regular.ttf"
              />
        </LinearLayout>

    </RelativeLayout>

    <com.ingic.cavalliclub.ui.views.AnyTextView
        android:id="@+id/tv_date_time_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/x10"
        android:paddingStart="@dimen/x10"
        android:textColor="@color/app_gray"
        android:textSize="@dimen/x8"
        app:typeface="@string/font_normal"
        tools:text="29-04-17" />

</LinearLayout>