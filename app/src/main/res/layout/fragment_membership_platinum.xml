<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <com.ingic.cavalliclub.ui.views.AnyTextView
        android:id="@+id/txt_no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:gravity="center"
        android:text="@string/no_data_available"
        android:textColor="@color/dark_grey"
        android:layout_gravity="center"
        app:typeface="Roboto-Regular.ttf"
        android:textSize="@dimen/x15" />

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:orientation="vertical"

            android:paddingBottom="@dimen/x10"
            android:paddingEnd="@dimen/x20"
            android:paddingStart="@dimen/x20"
            android:paddingTop="@dimen/x15">

            <ImageView
                android:id="@+id/iv_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
               />

            <ImageView
                android:id="@+id/CardLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/x35"
                 />


            <com.ingic.cavalliclub.ui.views.AnyTextView
                android:id="@+id/memberShip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/x20"
                tools:text="Platinum Membership"
                android:textAllCaps="true"
                android:textColor="@color/text_gray_logo"
                android:textSize="@dimen/x18"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/x80"
                app:typeface="@string/font_bold"
                android:visibility="gone"/>

            <com.ingic.cavalliclub.ui.views.AnyTextView
                android:id="@+id/memberShipPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/x20"
                tools:text="Platinum Membership"
                android:textAllCaps="true"
                android:textColor="@color/text_gray_logo"
                android:textSize="@dimen/x18"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/x30"
                app:typeface="@string/font_bold"/>


        </RelativeLayout>

        <Button
            android:id="@+id/btn_buyNow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50"
            android:layout_below="@+id/iv_card"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginBottom="@dimen/x30"
            android:layout_marginTop="@dimen/x10"
            android:background="@drawable/loginbtn"
            android:text="@string/buy_now"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/x18" />

    </LinearLayout>


</LinearLayout>