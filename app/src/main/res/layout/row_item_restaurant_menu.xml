<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/x10"
        android:layout_marginTop="@dimen/x10">

        <LinearLayout
            android:layout_width="@dimen/x110"
            android:layout_height="@dimen/x110"
            android:orientation="vertical"
            android:layout_marginEnd="@dimen/x10">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="10dp"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:id="@+id/iv_retaurant_menu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:src="@drawable/placeholder_thumb"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <com.ingic.cavalliclub.ui.views.AnyTextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x3"
                android:alpha="0.6"
                tools:text="Cavali Signature Lobster"
                android:textColor="@color/black"
                android:textSize="@dimen/x16"
                android:maxLines="2"
                android:minLines="2"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollbars="horizontal"
                android:ellipsize="end"
                android:scrollHorizontally="true"
                android:layout_gravity="center_vertical"
                app:typeface="@string/app_font_light" />

            <com.ingic.cavalliclub.ui.views.AnyTextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x3"
                android:layout_marginTop="@dimen/x4"
                tools:text="@string/lorem_ipsum_very_small"
                android:textColor="@color/light_grey"
                android:textSize="@dimen/x12"
                app:typeface="@string/app_font_light"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollbars="horizontal"
                android:ellipsize="end"
                android:scrollHorizontally="true"
                android:maxLines="2"
                android:minLines="2"/>

            <com.ingic.cavalliclub.ui.views.AnyTextView
                android:id="@+id/tv_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x5"
                android:layout_marginTop="@dimen/x3"
                android:gravity="end"
                android:layout_gravity="center_vertical"
                tools:text="AED 23.00"
                android:textColor="@color/app_golden"
                android:textSize="@dimen/x14"
                app:typeface="@string/app_font_bold"
                android:maxLines="1"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/viewLine"
        android:alpha="0.9"/>

</LinearLayout>

