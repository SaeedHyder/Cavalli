<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x10"
        android:layout_marginTop="@dimen/x10"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/x105"
            android:orientation="vertical"
            android:layout_marginEnd="@dimen/x5">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="10dp"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:id="@+id/iv_competition"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:src="@drawable/placeholder_thumb"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/x3">

            <com.application.cavalliclub.ui.views.AnyTextView
                android:id="@+id/tv_competition_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/x3"
                android:alpha="0.7"
                android:gravity="start"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/x16"
                app:typeface="@string/app_font_regular"
                android:maxLines="1"
                android:minLines="1"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollbars="horizontal"
                android:ellipsize="end"
                android:scrollHorizontally="true"
                android:layout_gravity="center_vertical"
                tools:text="Take a Selfie in Lounge" />

            <com.application.cavalliclub.ui.views.AnyTextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x3"
                android:layout_marginTop="@dimen/x5"
                android:alpha="0.7"
                android:textColor="@color/light_grey"
                android:textSize="@dimen/x12"
                app:typeface="@string/app_font_light"
                android:maxLines="3"
                android:minLines="3"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollbars="horizontal"
                android:ellipsize="end"
                android:scrollHorizontally="true"
                android:layout_gravity="center_vertical"
                tools:text="@string/lorem_ipsum_very_small" />

            <LinearLayout
                android:id="@+id/ll_staus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="@dimen/x2"
                android:gravity="end"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    tools:background="@drawable/pending" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical">

                    <com.application.cavalliclub.ui.views.AnyTextView
                        android:id="@+id/tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/x5"
                        android:gravity="center_vertical"
                        tools:text="Pending"
                        android:textColor="@color/pending"
                        android:textSize="@dimen/x14"
                        app:typeface="@string/app_font_regular" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:alpha="0.6"
        android:background="@color/viewLine" />

</LinearLayout>

