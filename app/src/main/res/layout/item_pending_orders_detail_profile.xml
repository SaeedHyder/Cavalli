<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x10"
        android:layout_marginTop="@dimen/x10"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/x110"
            android:layout_height="@dimen/x110"
            android:layout_marginEnd="@dimen/x10"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="10dp"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:id="@+id/iv_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:src="@drawable/placeholder_thumb"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.application.cavalliclub.ui.views.AnyTextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x3"
                android:alpha="0.6"
                android:textColor="@color/black"
                android:textSize="@dimen/x16"
                app:typeface="@string/app_font_light"
                tools:text="Cavali Signature Lobster" />

            <com.application.cavalliclub.ui.views.AnyTextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x3"
                android:layout_marginTop="@dimen/x4"
                android:maxLines="4"
                android:textColor="@color/light_grey"
                android:textSize="@dimen/x12"
                app:typeface="@string/app_font_light"
                tools:text="@string/lorem_ipsum_very_small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.application.cavalliclub.ui.views.AnyTextView
                    android:id="@+id/tv_quantity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/x5"
                    android:layout_marginTop="@dimen/x3"
                    android:gravity="start"
                    android:textColor="@color/app_golden"
                    android:textSize="@dimen/x14"
                    app:typeface="@string/app_font_bold"
                    tools:text="QTY 55" />

                <com.application.cavalliclub.ui.views.AnyTextView
                    android:id="@+id/tv_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/x5"
                    android:layout_marginTop="@dimen/x3"
                    android:gravity="end"
                    android:textColor="@color/app_golden"
                    android:textSize="@dimen/x14"
                    app:typeface="@string/app_font_bold"
                    tools:text="AED 23.00" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:alpha="0.9"
        android:background="@color/viewLine" />

</LinearLayout>

