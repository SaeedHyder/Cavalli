<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/x20"
    android:layout_marginStart="@dimen/x20"
    android:onClick="onClick"
    android:orientation="vertical"
    android:id="@+id/main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x10"
        android:layout_marginTop="@dimen/x10"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/x110"
            android:layout_marginEnd="@dimen/x10"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="10dp"
                app:cardCornerRadius="4dp">

                <ImageView
                    android:id="@+id/iv_drink"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:src="@drawable/logo_updated"
                    android:background="@color/black"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.675"
            android:orientation="vertical">

            <com.application.cavalliclub.ui.views.AnyTextView
                android:id="@+id/tv_drink_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/x3"
                android:alpha="0.7"
                android:ellipsize="marquee"
                android:gravity="start"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/x16"
                app:typeface="@string/app_font_regular"
                android:maxLines="2"
                android:minLines="2"
                tools:text="Take a Selfie in Lounge" />

            <com.application.cavalliclub.ui.views.AnyTextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x3"
                android:layout_marginTop="@dimen/x5"
                android:alpha="0.7"
                android:textColor="@color/light_grey"
                android:textSize="@dimen/x12"
                app:typeface="@string/app_font_light"
                android:maxLines="2"
                android:minLines="2"
                tools:text="@string/lorem_ipsum_very_small" />

            <com.application.cavalliclub.ui.views.AnyTextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/x5"
                android:gravity="end"
                android:textColor="@color/app_golden"
                android:textSize="@dimen/x14"
                app:typeface="@string/app_font_bold"
                tools:text="AED 23.00" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:alpha="0.6"
        android:background="@color/viewLine" />

</LinearLayout>

