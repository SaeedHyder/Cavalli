<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x10"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical">

        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8">

            <com.application.cavalliclub.ui.views.AnyTextView
                android:id="@+id/tv_guest_list"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x30"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:alpha="0.4"
                android:gravity="center_vertical"
                android:maxLength="30"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/x15"
                app:typeface="@string/app_font_light"
                tools:text="Andrew Johnson" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.2"
            android:gravity="end">

            <ImageView
                android:id="@+id/iv_edit"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:layout_marginEnd="@dimen/x8"
                android:background="@drawable/edit"
                android:layout_gravity="end"/>

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:layout_marginStart="@dimen/x8"
                android:background="@drawable/delete"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/black"
        android:layout_marginStart="@dimen/x20"
        android:layout_marginEnd="@dimen/x20"
        android:alpha="0.6"/>

</LinearLayout>