<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x10"
            android:gravity="top"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivNotification"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/x90"
                android:background="@drawable/rounder_image"
                android:padding="@dimen/x12"
                android:src="@drawable/logo_updated" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/x8"
                android:layout_marginTop="@dimen/x5"
                android:orientation="vertical">

                <com.ingic.cavalliclub.ui.views.AnyTextView
                    android:id="@+id/tv_msg"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"
                    android:text=""
                    android:textColor="@color/app_gray"
                    android:textSize="@dimen/x12"
                    app:typeface="@string/font_normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:orientation="horizontal">

                    <com.ingic.cavalliclub.ui.views.AnyTextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/x5"
                        android:drawablePadding="@dimen/x5"
                        android:drawableStart="@drawable/date1"
                        android:gravity="center_vertical"
                        android:textColor="@color/app_gray"
                        android:textSize="@dimen/x12"
                        app:typeface="@string/font_normal"
                        tools:text="29-04-17" />

                    <View
                        android:layout_width="@dimen/x1"
                        android:layout_height="match_parent"
                        android:background="@color/view_gray" />


                    <com.ingic.cavalliclub.ui.views.AnyTextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/x5"
                        android:drawablePadding="@dimen/x5"
                        android:drawableStart="@drawable/time1"
                        android:gravity="center_vertical"
                        android:textColor="@color/app_gray"
                        android:textSize="@dimen/x12"
                        app:typeface="@string/font_normal"
                        tools:text="03:00" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>