<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/x10"
        android:gravity="top"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivNotification"
            android:layout_width="@dimen/x110"
            android:layout_height="@dimen/x110"
            android:background="@drawable/rounder_image"
            android:padding="@dimen/x12"
            android:src="@drawable/logo_updated"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/x8"
            android:layout_marginTop="@dimen/x5"
            android:orientation="vertical">

            <com.application.cavalliclub.ui.views.AnyTextView
                android:id="@+id/tv_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:textColor="@color/app_gray"
                android:textSize="@dimen/x12"
                app:typeface="@string/font_normal"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x5"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:layout_gravity="center_vertical|bottom"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.application.cavalliclub.ui.views.AnyTextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/x5"
                        android:drawablePadding="@dimen/x5"
                        android:drawableStart="@drawable/date1"
                        android:gravity="center_vertical"
                        android:textColor="@color/app_gray"
                        android:textSize="@dimen/x12"
                        app:typeface="@string/font_normal"
                        tools:text="29-04-17" />

                    <View
                        android:layout_width="@dimen/x1"
                        android:layout_height="match_parent"
                        android:background="@color/view_gray" />

                    <com.application.cavalliclub.ui.views.AnyTextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/x5"
                        android:drawablePadding="@dimen/x5"
                        android:drawableStart="@drawable/time1"
                        android:gravity="center_vertical"
                        android:textColor="@color/app_gray"
                        android:textSize="@dimen/x12"
                        app:typeface="@string/font_normal"
                        tools:text="03:00" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:layout_gravity="center_vertical|bottom"
                    android:gravity="end">

                    <ImageView
                        android:id="@+id/iv_delete"
                        android:layout_width="@dimen/x20"
                        android:layout_height="@dimen/x20"
                        android:layout_gravity="end"
                        android:layout_marginStart="@dimen/x8"
                        android:background="@drawable/delete" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginEnd="@dimen/x10"
        android:layout_marginStart="@dimen/x10"
        android:background="@color/view_gray_dark" />

</LinearLayout>