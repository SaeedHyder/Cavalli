<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/placeholder_banner" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/x20"
        android:layout_marginStart="@dimen/x20"
        android:orientation="vertical">

        <com.ingic.cavalliclub.ui.views.AnyTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x15"
            android:alpha="0.8"
            android:text="Cavali Special BBQ Roll"
            android:textColor="@color/black"
            android:textSize="@dimen/x16"
            app:typeface="@string/app_font_light" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginTop="@dimen/x6"
            android:background="@color/view_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x10"
            android:orientation="horizontal">

            <com.ingic.cavalliclub.ui.views.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/location"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/x12"
                app:typeface="@string/font_normal" />

            <com.ingic.cavalliclub.ui.views.AnyTextView
                android:id="@+id/txt_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x5"
                android:text="21 Street Address,house hall 02 Duabi."
                android:gravity="center_vertical"
                android:textColor="@color/app_golden"
                android:textSize="@dimen/x12"
                app:typeface="@string/font_normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x10"
            android:orientation="horizontal">

            <com.ingic.cavalliclub.ui.views.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date1"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/x12"
                app:typeface="@string/font_normal" />

            <com.ingic.cavalliclub.ui.views.AnyTextView
                android:id="@+id/txt_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x5"
                android:text="December 31,2017"
                android:gravity="center_vertical"
                android:textColor="@color/app_golden"
                android:textSize="@dimen/x12"
                app:typeface="@string/font_normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x10"
            android:orientation="horizontal">

            <com.ingic.cavalliclub.ui.views.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/x12"
                app:typeface="@string/font_normal" />

            <com.ingic.cavalliclub.ui.views.AnyTextView
                android:id="@+id/txt_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x5"
                android:text="8:00 pm"
                android:gravity="center_vertical"
                android:textColor="@color/app_golden"
                android:textSize="@dimen/x12"
                app:typeface="@string/font_normal" />

        </LinearLayout>

        <com.ingic.cavalliclub.ui.views.AnyTextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x15"
            android:lineSpacingExtra="@dimen/x3"
            android:text="@string/lorem_ipsum_very_small_new"
            android:textColor="@color/light_grey"
            android:textSize="@dimen/x12"
            app:typeface="@string/app_font_light" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x10"
            android:layout_marginEnd="@dimen/x10"
            android:layout_marginTop="@dimen/x20"
            android:layout_marginBottom="@dimen/x20"
            android:background="@drawable/loginbtn"
            android:text="@string/cancel_my_reservation"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/x17" />


    </LinearLayout>

</LinearLayout>

</ScrollView>