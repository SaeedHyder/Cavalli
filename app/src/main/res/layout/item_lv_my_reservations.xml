<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/x20"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.application.cavalliclub.ui.views.AnyTextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:alpha="0.7"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/x18"
                app:typeface="@string/app_font_regular"
                tools:text="New Year Party Package" />

            <com.application.cavalliclub.ui.views.AnyTextView
                android:id="@+id/tv_view_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.3"
                android:alpha="0.7"
                android:gravity="end"
                android:text="View Details"
                android:textColor="@color/app_golden"
                android:textSize="@dimen/x14"

                app:typeface="@string/app_font_regular" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/x10"
            android:layout_marginStart="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:orientation="horizontal">

            <com.application.cavalliclub.ui.views.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x2"
                android:alpha="0.7"
                android:gravity="center_vertical"
                android:text="@string/date"
                android:textColor="@color/black"
                android:textSize="@dimen/x14"
                app:typeface="@string/app_font_regular" />

            <com.application.cavalliclub.ui.views.AnyTextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x2"
                android:gravity="center_vertical"
                android:textColor="@color/light_grey"
                android:textSize="@dimen/x14"
                app:typeface="@string/app_font_regular"
                tools:text="Sunday, 31 Dec 2017" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/x10"
            android:layout_marginStart="@dimen/x10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:orientation="horizontal">

                <com.application.cavalliclub.ui.views.AnyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/x2"
                    android:alpha="0.7"
                    android:gravity="center_vertical"
                    android:text="@string/total_numbers_of_people"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x14"
                    app:typeface="@string/app_font_regular" />

                <com.application.cavalliclub.ui.views.AnyTextView
                    android:id="@+id/tv_total_people"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x2"
                    android:gravity="center_vertical"
                    android:textColor="@color/light_grey"
                    android:textSize="@dimen/x14"
                    app:typeface="@string/app_font_light"
                    tools:text="100" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="@dimen/x2"
                android:layout_weight="0.02"
                android:gravity="end"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    tools:background="@drawable/pending" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical">

                    <com.application.cavalliclub.ui.views.AnyTextView
                        android:id="@+id/tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/x5"
                        android:gravity="center_vertical"
                        android:textColor="@color/pending"
                        android:textSize="@dimen/x14"
                        app:typeface="@string/app_font_regular"
                        tools:text="Pending" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginBottom="@dimen/x5"
            android:layout_marginEnd="@dimen/x10"
            android:layout_marginStart="@dimen/x10"
            android:layout_marginTop="@dimen/x5"
            android:alpha="0.6"
            android:background="@color/black" />

    </LinearLayout>
</LinearLayout>