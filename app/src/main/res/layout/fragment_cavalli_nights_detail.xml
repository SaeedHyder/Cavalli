<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="onClick"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_header"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x180"
                android:src="@drawable/placeholder_banner"
                android:scaleType="fitXY"
                android:adjustViewBounds="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x50"
                android:layout_marginTop="@dimen/x5"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/titleBackBtn"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x10"
                    android:padding="@dimen/x5"
                    android:src="@drawable/backbtn"/>

                <com.ingic.cavalliclub.ui.views.AnyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/x5"
                    android:alpha="0.8"
                    android:text="Details"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x19"
                    app:typeface="@string/app_font_light" />

            </RelativeLayout>

        </RelativeLayout>

        <com.ingic.cavalliclub.ui.views.AnyTextView
            android:id="@+id/txt_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginTop="@dimen/x10"
            android:alpha="0.8"
            android:text="Cavalli Special BBQ Roll"
            android:textColor="@color/black"
            android:textSize="@dimen/x18"
            app:typeface="@string/app_font_light" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginBottom="@dimen/x5"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginTop="@dimen/x5"
            android:alpha="0.2"
            android:background="@color/black" />

        <com.ingic.cavalliclub.ui.views.AnyTextView
            android:id="@+id/txt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginStart="@dimen/x20"
            android:alpha="0.4"
            android:text="@string/lorem_ipsum_small"
            android:textColor="@color/black"
            android:textSize="@dimen/x14"
            app:typeface="@string/app_font_light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.ingic.cavalliclub.ui.views.AnyTextView
                android:id="@+id/tv_date_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x20"
                android:layout_marginTop="@dimen/x10"
                android:text="@string/date"
                android:textColor="@color/black"
                android:textSize="@dimen/x14"
                app:typeface="@string/app_font_bold" />

            <com.ingic.cavalliclub.ui.views.AnyTextView
                android:id="@+id/txt_Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x20"
                android:layout_marginStart="@dimen/x5"
                android:layout_marginTop="@dimen/x10"
                android:text="December 31, 2018"
                android:textColor="@color/app_golden"
                android:textSize="@dimen/x14"
                app:typeface="@string/app_font_bold" />

        </LinearLayout>

        <com.ingic.cavalliclub.ui.views.AnyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginTop="@dimen/x40"
            android:alpha="0.8"
            android:text="Share On"
            android:textColor="@color/black"
            android:textSize="@dimen/x18"
            app:typeface="@string/app_font_light" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginBottom="@dimen/x5"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginTop="@dimen/x5"
            android:alpha="0.2"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginBottom="@dimen/x20"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_fb"
                android:layout_width="@dimen/x45"
                android:layout_height="@dimen/x45"
                android:background="@drawable/fb" />

            <ImageView
                android:id="@+id/iv_twitter"
                android:layout_width="@dimen/x45"
                android:layout_height="@dimen/x45"
                android:layout_marginStart="@dimen/x10"
                android:background="@drawable/twitter" />

            <ImageView
                android:id="@+id/iv_google"
                android:layout_width="@dimen/x45"
                android:layout_height="@dimen/x45"
                android:layout_marginStart="@dimen/x10"
                android:background="@drawable/google" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>