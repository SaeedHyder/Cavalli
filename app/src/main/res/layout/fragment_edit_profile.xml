<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="@dimen/x35"
        android:paddingStart="@dimen/x35"
        android:paddingTop="@dimen/x30">

        <RelativeLayout
            android:id="@+id/imgLayout"
            android:layout_width="@dimen/x130"
            android:layout_height="@dimen/x130"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/x10"
            android:gravity="center"
            android:padding="@dimen/x5">

            <android.support.v7.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="@dimen/x180"
                android:layout_height="@dimen/x150"
                android:layout_gravity="center_horizontal"
                android:elevation="@dimen/x15"
                app:cardCornerRadius="@dimen/x8">

                <ImageView
                    android:id="@+id/iv_profile_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/relativeLayout2"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder_banner"/>

                <ImageView
                    android:id="@+id/imgCamera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="bottom|end"
                    android:layout_marginBottom="@dimen/x10"
                    android:layout_marginRight="@dimen/x5"
                    android:src="@drawable/icn_camera"
                    android:visibility="visible" />

            </android.support.v7.widget.CardView>
        </RelativeLayout>

        <com.ingic.cavalliclub.ui.views.AnyEditTextView
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/x40"
            android:background="@color/transparent"
            android:drawableLeft="@drawable/name"
            android:drawablePadding="@dimen/x10"
            android:gravity="center_vertical"
            android:hint="@string/full_names"
            android:imeOptions="actionDone"
            android:inputType="textPersonName"
            android:maxLength="30"
            android:maxLines="1"
            android:textColor="@color/light_grey"
            android:textColorHint="@color/light_grey"
            android:textSize="@dimen/x16"
            app:testType="personFullName"
            app:typeface="@string/app_font_regular" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginBottom="@dimen/x5"
            android:layout_marginTop="@dimen/x5"
            android:background="@color/view_gray_dark" />

        <com.ingic.cavalliclub.ui.views.AnyEditTextView
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:background="@color/transparent"
            android:drawableLeft="@drawable/email1"
            android:drawablePadding="@dimen/x10"
            android:gravity="center_vertical"
            android:hint="@string/email_address"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:maxLength="30"
            android:maxLines="1"
            android:textColor="@color/grey"
            android:textColorHint="@color/grey"
            android:textSize="@dimen/x16"
            app:testType="email"
            app:typeface="@string/app_font_regular" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginBottom="@dimen/x5"
            android:layout_marginTop="@dimen/x5"
            android:background="@color/view_gray_dark" />

        <com.ingic.cavalliclub.ui.views.AnyEditTextView
            android:id="@+id/edt_phone_number"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/phone1"
            android:drawablePadding="@dimen/x10"
            android:gravity="center_vertical"
            android:hint="@string/phone_number"
            android:imeOptions="actionNext"
            android:inputType="phone"
            android:maxLength="20"
            android:maxLines="1"
            android:textColor="@color/grey"
            android:textColorHint="@color/grey"
            android:textSize="@dimen/x18"
            app:testType="phone"
            app:typeface="@string/app_font_regular" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginBottom="@dimen/x5"
            android:layout_marginTop="@dimen/x5"
            android:background="@color/view_gray_dark" />

        <com.ingic.cavalliclub.ui.views.AnyTextView
            android:id="@+id/tv_dob"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x30"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/x5"
            android:layout_marginStart="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:drawableLeft="@drawable/cake2"
            android:drawablePadding="@dimen/x10"
            android:gravity="start"
            android:text="@string/date_of_birth"
            android:textColor="@color/light_grey"
            android:textSize="@dimen/x18"
            app:typeface="@string/app_font_regular" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginBottom="@dimen/x5"
            android:layout_marginTop="@dimen/x5"
            android:background="@color/view_gray_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x30"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/x20"
                android:layout_gravity="center_vertical"
                android:src="@drawable/gender2" />

            <Spinner
                android:id="@+id/sp_gender"
                style="@style/spinner_style"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:layout_marginStart="@dimen/x10"
                android:gravity="center_vertical" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginBottom="@dimen/x5"
            android:layout_marginTop="@dimen/x5"
            android:background="@color/view_gray_dark" />

        <Button
            android:id="@+id/btn_save_changes"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50"
            android:layout_marginTop="@dimen/x15"
            android:layout_marginBottom="@dimen/x15"
            android:background="@drawable/loginbtn"
            android:text="@string/save_changes"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/x18" />


    </LinearLayout>
</ScrollView>