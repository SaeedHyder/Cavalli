<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:src="http://schemas.android.com/tools"
    android:onClick="onClick"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginEnd="@dimen/x50"
                    android:layout_marginStart="@dimen/x50"
                    android:layout_marginTop="@dimen/x10"
                    android:layout_height="@dimen/x350">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/x40"/>

                        <ImageView
                            android:id="@+id/iv_photo_song"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/placeholder_banner"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/iv_play"
                                android:layout_width="@dimen/x70"
                                android:layout_height="@dimen/x70"
                                android:layout_gravity="center"
                                android:background="@drawable/playicon"
                                android:scaleType="fitXY"
                                android:layout_centerInParent="true"
                                android:visibility="gone"/>

                            <ImageView
                                android:id="@+id/iv_pasue"
                                android:layout_width="@dimen/x70"
                                android:layout_height="@dimen/x70"
                                android:layout_gravity="center"
                                android:background="@drawable/pause"
                                android:scaleType="fitXY"
                                android:layout_centerInParent="true"
                                android:visibility="gone"/>
                        </RelativeLayout>

                </RelativeLayout>


                <com.application.cavalliclub.ui.views.AnyTextView
                    android:id="@+id/tv_track_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"
                    android:layout_marginTop="@dimen/x10"
                    android:alpha="0.7"
                    android:gravity="center_vertical"
                    android:text="R O S A Y W/ DJ MAD BEATS"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x18"
                    app:typeface="@string/app_font_light" />

                <com.application.cavalliclub.ui.views.AnyTextView
                    android:id="@+id/tv_performing_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"
                    android:layout_marginTop="@dimen/x5"
                    android:gravity="center_vertical"
                    android:text="PERFORMING NOW"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x18"
                    app:typeface="@string/app_font_semi_bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:layout_marginEnd="@dimen/x10"
                    android:layout_marginStart="@dimen/x10"
                    android:layout_marginTop="@dimen/x15"
                    android:alpha="0.3"
                    android:background="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x20"
                android:layout_marginEnd="@dimen/x60"
                android:layout_marginStart="@dimen/x60"
                android:layout_marginTop="@dimen/x10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:background="@drawable/volume" />

                <SeekBar
                    android:id="@+id/seekBarSound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/x15"
                    android:background="@null"
                    android:paddingStart="@dimen/x3"
                    android:paddingEnd="@dimen/x3"
                    android:progress="100"
                    android:progressDrawable="@drawable/progress_background"
                    android:splitTrack="false"
                    android:thumb="@drawable/circle_seek_bar"
                    android:thumbOffset="1dp"
                    android:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>