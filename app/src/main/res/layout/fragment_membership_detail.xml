<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:onClick="onClick"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x200"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/placeholder_banner" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginStart="@dimen/x20"
            android:orientation="vertical">

            <com.application.cavalliclub.ui.views.AnyTextView
                android:id="@+id/txt_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:layout_marginBottom="@dimen/x10"
                android:alpha="0.7"
                tools:text="Silver Membership"
                android:textColor="@color/black"
                android:textSize="@dimen/x18"
                app:typeface="@string/app_font_light" />

            <View
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:alpha="0.3"
                android:background="@color/viewLine" />

            <com.application.cavalliclub.ui.views.AnyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:alpha="0.7"
                android:text="MemberShip Includes"
                android:textColor="@color/black"
                android:textSize="@dimen/x15"
                app:typeface="@string/app_font_bold" />

            <com.application.cavalliclub.ui.views.AnyTextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:layout_marginBottom="@dimen/x10"
                android:alpha="0.7"
                android:lineSpacingExtra="@dimen/x10"
                tools:text="@string/lorem_ipsum_new_line"
                android:textColor="@color/black"
                android:textSize="@dimen/x12"
                app:typeface="@string/app_font_light" />

            <View
                android:id="@+id/view_line_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:alpha="0.3"
                android:background="@color/viewLine" />

            <com.application.cavalliclub.ui.views.AnyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:alpha="0.7"
                android:text="Terms And Conditions"
                android:textColor="@color/black"
                android:textSize="@dimen/x15"
                app:typeface="@string/app_font_bold" />

            <com.application.cavalliclub.ui.views.AnyTextView
                android:id="@+id/tv_TandC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:alpha="0.7"
                android:lineSpacingExtra="@dimen/x10"
                tools:text="@string/lorem_ipsum_new_line"
                android:textColor="@color/black"
                android:textSize="@dimen/x12"
                app:typeface="@string/app_font_light" />

            <Button
                android:id="@+id/btn_buyNow"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x50"
                android:layout_below="@+id/iv_card"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/x20"
                android:layout_marginTop="@dimen/x20"
                android:background="@drawable/loginbtn"
                android:text="@string/buy_now"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/x18" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>