<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainFrameLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x230"
            android:adjustViewBounds="true"
            android:background="@drawable/banner"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x150"
            android:layout_centerVertical="true"
            android:src="@drawable/new_logo_home"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50"
            android:layout_marginTop="@dimen/x5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/titleMenuBtn"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:padding="@dimen/x7"
                android:src="@drawable/nav" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/x5"
                android:src="@drawable/logo_name"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/titleBtnProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x10"
                android:padding="@dimen/x10"
                android:paddingBottom="@dimen/x5"
                android:paddingTop="@dimen/x5"
                android:src="@drawable/profile"
                android:visibility="visible" />

        </RelativeLayout>

        <com.application.cavalliclub.ui.views.AnyTextView
            android:id="@+id/txt_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x25"
            android:layout_marginRight="@dimen/x5"
            android:layout_marginTop="@dimen/x80"
            android:text="@string/the_restaurant"
            android:textColor="@color/white"
            android:textSize="@dimen/x28"
            android:visibility="gone"
            app:typeface="@string/app_font_semi_bold" />

        <com.application.cavalliclub.ui.views.AnyTextView
            android:id="@+id/txt_sub_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_heading"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x5"
            android:alpha="0.6"
            android:text="@string/under_wonderful_shining_lights"
            android:textColor="@color/white"
            android:textSize="@dimen/x17"
            android:visibility="gone"
            app:typeface="@string/app_font_light_one" />

        <RelativeLayout
            android:id="@+id/rl_searchbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50"
            android:layout_below="@id/iv_header"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/x25_">

            <LinearLayout
                android:id="@+id/ll_search_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/searchbar"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.application.cavalliclub.ui.views.AnyTextView
                    android:id="@+id/edt_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"
                    android:layout_weight="0.9"
                    android:alpha="0.6"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:hint="@string/search"
                    android:imeOptions="actionDone"
                    android:inputType="textPersonName"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:paddingEnd="@dimen/x10"
                    android:paddingStart="@dimen/x10"
                    android:textColor="@color/light_grey"
                    android:textColorHint="@color/light_grey"
                    android:textSize="@dimen/x16"
                    app:testType="personFullName"
                    app:typeface="@string/app_font_light" />

                <ImageView
                    android:id="@+id/iv_search"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/x20"
                    android:layout_weight="0.1"
                    android:padding="@dimen/x5"
                    android:src="@drawable/search" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x16"
            android:layout_marginBottom="@dimen/x16"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginEnd="@dimen/x25"
                android:layout_marginStart="@dimen/x25"
                android:layout_marginTop="@dimen/x5"
                android:background="@drawable/loginbtn"
                android:text="@string/search_button"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/x18"
                android:visibility="gone" />

            <com.application.cavalliclub.ui.views.AnyTextView
                android:id="@+id/txt_categories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginEnd="@dimen/x8"
                android:layout_marginStart="@dimen/x8"
                android:alpha="0.8"
                android:text="@string/categories"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:typeface="@string/app_font_bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:alpha="0.2"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x90"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_reservations"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_reservation"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/x40"
                        android:src="@drawable/reservation" />

                    <com.application.cavalliclub.ui.views.AnyTextView
                        android:id="@+id/txt_reservation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x5"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:freezesText="true"
                        android:gravity="center"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="@string/reservations"
                        android:textColor="@color/black"
                        android:textSize="@dimen/x10"
                        app:typeface="@string/font_normal" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/x1"
                    android:layout_height="match_parent"
                    android:alpha="0.2"
                    android:background="@color/black" />

                <LinearLayout
                    android:id="@+id/ll_menu"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/x40"
                        android:src="@drawable/menu2" />

                    <com.application.cavalliclub.ui.views.AnyTextView
                        android:id="@+id/txt_menu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x5"
                        android:alpha="0.8"
                        android:gravity="center"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="@string/menu"
                        android:textColor="@color/black"
                        android:textSize="@dimen/x10"
                        app:typeface="@string/font_normal" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/x1"
                    android:layout_height="match_parent"
                    android:alpha="0.2"
                    android:background="@color/black" />

                <!--<LinearLayout
                    android:id="@+id/ll_guest_list"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_guest_list"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/x40"
                        android:src="@drawable/guestlist2" />

                    <com.ingic.cavalliclub.ui.views.AnyTextView
                        android:id="@+id/txt_guest_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/x5"
                        android:alpha="0.8"
                        android:gravity="center"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="@string/guest_list"
                        android:textColor="@color/black"
                        android:textSize="@dimen/x10"
                        app:typeface="@string/font_normal" />

                </LinearLayout>-->

                <LinearLayout
                    android:id="@+id/ll_myevents"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_myevents"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/x40"
                        android:src="@drawable/myevents2" />

                    <com.application.cavalliclub.ui.views.AnyTextView
                        android:id="@+id/txt_myevents"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x5"
                        android:alpha="0.8"
                        android:gravity="center"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="@string/event_calendar"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/x10"
                        app:typeface="@string/font_normal" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/x1"
                    android:layout_height="match_parent"
                    android:alpha="0.2"
                    android:background="@color/black" />

                <LinearLayout
                    android:id="@+id/ll_competition"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_competition"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/x40"
                        android:src="@drawable/competition" />

                    <com.application.cavalliclub.ui.views.AnyTextView
                        android:id="@+id/txt_competition"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/x5"
                        android:alpha="0.8"
                        android:gravity="center"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="@string/competition"
                        android:textColor="@color/black"
                        android:textSize="@dimen/x10"
                        app:typeface="@string/font_normal" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:alpha="0.2"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x90"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_music"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_music"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/x40"
                        android:src="@drawable/music2" />


                    <com.application.cavalliclub.ui.views.AnyTextView
                        android:id="@+id/txt_music"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x5"
                        android:gravity="center"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="@string/music"
                        android:textColor="@color/black"
                        android:textSize="@dimen/x10"
                        app:typeface="@string/font_normal" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/x1"
                    android:layout_height="match_parent"
                    android:alpha="0.2"
                    android:background="@color/black" />

                <LinearLayout
                    android:id="@+id/ll_bar_ordering"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_bar_odering"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/x40"
                        android:src="@drawable/barorder" />

                    <com.application.cavalliclub.ui.views.AnyTextView
                        android:id="@+id/txt_bar_ordering"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x5"
                        android:alpha="0.8"
                        android:gravity="center"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="@string/bar_ordering"
                        android:textColor="@color/black"
                        android:textSize="@dimen/x10"
                        app:typeface="@string/font_normal" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/x1"
                    android:layout_height="match_parent"
                    android:alpha="0.2"
                    android:background="@color/black" />

                <LinearLayout
                    android:id="@+id/ll_cavalli_nights"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_cavalli_nights"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/x40"
                        android:src="@drawable/cavlinights2" />

                    <com.application.cavalliclub.ui.views.AnyTextView
                        android:id="@+id/txt_cavalli_nights"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/x5"
                        android:alpha="0.8"
                        android:gravity="center"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="@string/cavalli_night"
                        android:textColor="@color/black"
                        android:textSize="@dimen/x10"
                        app:typeface="@string/font_normal" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/x1"
                    android:layout_height="match_parent"
                    android:alpha="0.2"
                    android:background="@color/black" />

                <LinearLayout
                    android:id="@+id/ll_membership"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_membership"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/x40"
                        android:src="@drawable/membership" />

                    <com.application.cavalliclub.ui.views.AnyTextView
                        android:id="@+id/txt_membership"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/x5"
                        android:alpha="0.8"
                        android:gravity="center"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="@string/membership"
                        android:textColor="@color/black"
                        android:textSize="@dimen/x10"
                        app:typeface="@string/font_normal" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:alpha="0.2"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.application.cavalliclub.ui.views.AnyTextView
                    android:id="@+id/txt_updates"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x10"
                    android:layout_marginEnd="@dimen/x8"
                    android:layout_marginStart="@dimen/x8"
                    android:layout_marginTop="@dimen/x10"
                    android:layout_weight="0.8"
                    android:alpha="0.8"
                    android:text="@string/latest_updates"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:typeface="@string/app_font_bold" />

                <LinearLayout
                    android:id="@+id/ll_see_all"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x10"
                    android:layout_marginRight="@dimen/x5"
                    android:layout_marginTop="@dimen/x10"
                    android:layout_weight="0.3"
                    android:orientation="horizontal">

                    <com.application.cavalliclub.ui.views.AnyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/x8"
                        android:layout_marginStart="@dimen/x8"
                        android:alpha="0.8"
                        android:text="@string/see_all"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:typeface="@string/app_font_regular" />

                    <ImageView
                        android:layout_width="@dimen/x9"
                        android:layout_height="@dimen/x9"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/x8"
                        android:background="@drawable/rightarrow" />
                </LinearLayout>

            </LinearLayout>

            <com.application.cavalliclub.ui.views.AnyTextView
                android:id="@+id/txt_no_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/no_data_available"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/x15"
                android:visibility="gone"
                app:typeface="Roboto-Regular.ttf" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x24"
                android:nestedScrollingEnabled="true"
                android:orientation="horizontal" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>