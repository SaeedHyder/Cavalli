<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:id="@+id/main_frame"
    android:background="@drawable/title_header"

   >

    <ImageView
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x150"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:background="@drawable/title_header"
        android:visibility="gone"
        />


    <RelativeLayout
        android:id="@+id/title_buttons"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60">

        <ImageView
            android:id="@+id/btnLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:padding="@dimen/x10"
            android:scaleType="fitXY"
            android:src="@drawable/nav"
            android:visibility="visible" />

        <com.application.cavalliclub.ui.views.AnyTextView
            android:id="@+id/txt_subHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/btnLeft"
            android:layout_toStartOf="@+id/btnRight2"
            android:gravity="center"
            android:text="Template"
            android:textColor="@color/white"
            android:textSize="@dimen/x16"
            app:typeface="OpenSans-Regular.ttf" />

        <ImageView
            android:id="@+id/btnRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x15"
            android:layout_toStartOf="@+id/btnRight2"
            android:padding="@dimen/x7"
            android:paddingBottom="@dimen/x5"
            android:paddingTop="@dimen/x5"
            android:src="@drawable/filter"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/btnRight2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x10"
            android:padding="@dimen/x7"
            android:paddingBottom="@dimen/x5"
            android:paddingTop="@dimen/x5"
            android:src="@drawable/cart"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btnRight2"
            android:layout_alignEnd="@+id/btnRight2"
            android:layout_alignStart="@+id/btnRight2"
            android:layout_alignTop="@+id/btnRight2">

            <com.application.cavalliclub.ui.views.AnyTextView
                android:id="@+id/txtBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/badge_drawable"
                android:gravity="center"
                android:maxLength="2"
                android:paddingBottom="@dimen/x2"
                android:paddingLeft="@dimen/x5"
                android:paddingRight="@dimen/x5"
                android:paddingTop="@dimen/x2"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="@dimen/x7"
                app:typeface="@string/font_bold" />
        </RelativeLayout>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/title_tabs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x35"
        android:layout_alignBottom="@+id/header_layout"
        android:paddingTop="@dimen/x5"
        android:background="@color/black"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/rl_category1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.application.cavalliclub.ui.views.AnyTextView
                android:id="@+id/txt_categories1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x55"
                android:layout_centerHorizontal="true"
                android:ellipsize="marquee"
                android:gravity="center_vertical"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingEnd="@dimen/x15"
                android:paddingStart="@dimen/x15"
                android:scrollHorizontally="true"
                android:scrollbars="horizontal"
                android:singleLine="true"
                android:text="Invite Guest"
                android:textColor="@color/app_golden"
                android:textSize="@dimen/x16"
                app:typeface="@string/app_font_regular" />


            <View
                android:id="@+id/viewCategory1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x5"
                android:layout_alignEnd="@+id/txt_categories1"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/txt_categories1"
                android:layout_below="@+id/txt_categories"
                android:background="@color/app_golden" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_category2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.application.cavalliclub.ui.views.AnyTextView
                android:id="@+id/txt_categories2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x55"
                android:layout_centerHorizontal="true"
                android:ellipsize="marquee"
                android:gravity="center_vertical"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingEnd="@dimen/x15"
                android:paddingStart="@dimen/x15"
                android:scrollHorizontally="true"
                android:scrollbars="horizontal"
                android:singleLine="true"
                android:text="Invite Guest"
                android:textColor="@color/white"
                android:textSize="@dimen/x16"
                app:typeface="@string/app_font_regular" />


            <View
                android:id="@+id/viewCategory2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x5"
                android:layout_alignEnd="@+id/txt_categories2"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/txt_categories2"
                android:background="@color/app_golden"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_category3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone">

            <com.application.cavalliclub.ui.views.AnyTextView
                android:id="@+id/txt_categories3"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x55"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/x15"
                android:paddingStart="@dimen/x15"
                android:text="Invite Guest"
                android:textColor="@color/white"
                android:textSize="@dimen/x16"
                app:typeface="@string/app_font_regular" />


            <View
                android:id="@+id/viewCategory3"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x5"
                android:layout_alignEnd="@+id/txt_categories3"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/txt_categories3"
                android:background="@color/app_golden"
                android:visibility="gone" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x35"
        android:layout_alignBottom="@+id/header_layout"
        android:paddingTop="@dimen/x5"
        android:background="@color/black"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical"
        android:visibility="gone">

        <com.application.cavalliclub.ui.views.CustomRecyclerView
            android:id="@+id/lv_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:divider="@null"
            android:scrollbars="none"
            android:visibility="visible" />

    </LinearLayout>


</RelativeLayout>