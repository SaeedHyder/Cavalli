<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.ingic.cavalliclub.ui.views.ExpandedListView
            android:id="@+id/lv_add_to_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginTop="@dimen/x20"
            android:divider="@null" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginTop="@dimen/x20"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.ingic.cavalliclub.ui.views.AnyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:alpha="0.8"
                android:gravity="center_vertical"
                android:text="@string/sub_total"
                android:textColor="@color/black"
                android:textSize="@dimen/x14"
                app:typeface="@string/app_font_regular" />

            <com.ingic.cavalliclub.ui.views.AnyTextView
                android:id="@+id/tv_sub_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:alpha="0.8"
                android:gravity="end|center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/x14"
                app:typeface="@string/app_font_regular"
                tools:text="AED 200" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginTop="@dimen/x5"
            android:background="@color/viewLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginTop="@dimen/x15"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.ingic.cavalliclub.ui.views.AnyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:alpha="0.8"
                android:gravity="center_vertical"
                android:text="@string/tip"
                android:textColor="@color/black"
                android:textSize="@dimen/x14"
                app:typeface="@string/app_font_regular" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="end|center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_0"
                    android:layout_width="@dimen/x35"
                    android:layout_height="@dimen/x35"
                    android:layout_marginEnd="@dimen/x5"
                    android:background="@drawable/circle_drawable_unselected"
                    android:text="0%"
                    android:textAllCaps="false"
                    android:textColor="@color/app_golden" />

                <Button
                    android:id="@+id/btn_5"
                    android:layout_width="@dimen/x35"
                    android:layout_height="@dimen/x35"
                    android:layout_marginEnd="@dimen/x5"
                    android:layout_marginStart="@dimen/x5"
                    android:background="@drawable/circle_drawable_unselected"
                    android:text="5%"
                    android:textAllCaps="false"
                    android:textColor="@color/app_golden" />

                <Button
                    android:id="@+id/btn_10"
                    android:layout_width="@dimen/x35"
                    android:layout_height="@dimen/x35"
                    android:layout_marginEnd="@dimen/x5"
                    android:layout_marginStart="@dimen/x5"
                    android:background="@drawable/circle_drawable_unselected"
                    android:text="10%"
                    android:textAllCaps="false"
                    android:textColor="@color/app_golden" />

                <Button
                    android:id="@+id/btn_15"
                    android:layout_width="@dimen/x35"
                    android:layout_height="@dimen/x35"
                    android:layout_marginStart="@dimen/x5"
                    android:background="@drawable/circle_drawable_unselected"
                    android:text="15%"
                    android:textAllCaps="false"
                    android:textColor="@color/app_golden" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginBottom="@dimen/x5"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginTop="@dimen/x5"
            android:background="@color/viewLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginTop="@dimen/x20"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

            <com.ingic.cavalliclub.ui.views.AnyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:alpha="0.8"
                android:gravity="center_vertical"
                android:text="@string/inclusive_of_vat_and_municipality_fee"
                android:textColor="@color/black"
                android:textSize="@dimen/x14"
                app:typeface="@string/app_font_regular" />

            <com.ingic.cavalliclub.ui.views.AnyTextView
                android:id="@+id/tv_tax"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:alpha="0.8"
                android:gravity="end|center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/x14"
                app:typeface="@string/app_font_regular"
                tools:text="AED 200" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginBottom="@dimen/x5"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginTop="@dimen/x5"
            android:background="@color/viewLine"
            android:visibility="visible" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginTop="@dimen/x20"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.ingic.cavalliclub.ui.views.AnyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:alpha="0.8"
                android:gravity="center_vertical"
                android:text="Total"
                android:textColor="@color/black"
                android:textSize="@dimen/x14"
                app:typeface="@string/app_font_regular" />

            <com.ingic.cavalliclub.ui.views.AnyTextView
                android:id="@+id/tv_total_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:alpha="0.8"
                android:gravity="end|center_vertical"
                android:textColor="@color/app_golden"
                android:textSize="@dimen/x18"
                app:typeface="@string/app_font_bold"
                tools:text="AED 220" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginBottom="@dimen/x5"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginTop="@dimen/x5"
            android:background="@color/viewLine" />

        <Button
            android:id="@+id/btn_pay_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x20"
            android:background="@drawable/loginbtn"
            android:text="@string/pay_now"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/x18" />
    </LinearLayout>
</ScrollView>